<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Worldcup</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Worldcup.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
	<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Cairo' rel='stylesheet'>

</head>
<body>
    <header>
        <nav class="navbar  text-success roundes " style="background-color:seagreen">
            <div class="container">
                <div id="logo">

                    <ul class="list list-inline ">
                        <li class="list-inline-item ">  <img src="images/logo.PNG" class="rounded rounded-circle" width="30" height="30"> </li>
                        <li class="list-inline-item   text-success" style="font-size:small;"><strong>أهلاً بالعالم</strong></li>

                    </ul>
                </div>

                <ul class="list list-inline text-white">

                    <li class="list-inline-item  " style="font-size:small;"> <i class="far fa-twitter"></i></li>
                    <li class="list-inline-item " style="font-size:small;"><i class="bi bi-facebook"></i></li>
                    <li class="list-inline-item  " style="font-size:small;"><i class="bi bi-whatsapp"></i></li>

                </ul>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white">
        <div class="container">
            &copy; 2024 - Worldcup - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
